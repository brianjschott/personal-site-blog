<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
	<link href="https://fonts.googleapis.com/css?family=Barlow+Condensed" rel="stylesheet">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    
    <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
</head>
<body>

    <div class="rightnavbar grey darken-4 white-text z-depth-4">
		<ul>
			<li><a href="#">Home</a></li>
			<li><a href="#">About</a></li>
			<li><a href="#">Contact</a></li>
		</ul>
	</div>
	<main>
		<section class="row teal darken-2 white-text z-depth-3" id="topcontainer">
			<div class="col m4 left-spacing">
					<h1>Brian Schott</h1>
					<h5>Computer Science Educator</h5>
					<h5>Budding Design Thinker</h5>
			</div>
			<div class="col m3">
				<img src="assets/headshot.jpg" style="border-radius:50%;width:200px;">
			</div>
			<div class="col m5">
				<ul>
					<li>Twitter</li>
					<li>LinkedIn</li>
				</ul>
				
			</div>
		</section>
		
		

    
    <section class="blog-container amber lighten-4 z-depth-2">
		<h1 class="left-spacing" style="margin-top:0px">Blog</h1>
		{% for page in pages|sort_by("time")|reverse %}
        {% if page.id starts with "blog/" and not page.hidden %}
		<article class="amber lighten-2 left-spacing post z-depth-1">
			<h3><a href="{{ page.url }}">{{ page.title }}</a></h3>
			<h6><em>{{ page.date_formatted }}</em></h6>
			<h6>Tags: {{ page.meta.tags }}
			</h6>
			{{ page.id|content }}
		</article>
		{% endif %}
        {% endfor %}
	</section>

	</main>

  

    {#<script src="{{ theme_url }}/js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>#}
    {#<script src="{{ theme_url }}/js/utils.js" type="text/javascript"></script>#}
    {#<script src="{{ theme_url }}/js/pico.js" type="text/javascript"></script>#}

</body>
</html>
